{
  // EDITOR GENERAL
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'JetBrains Mono', 'Consolas', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.tokenColorCustomizations": {
    "comments": "#818a99"
  },

  // TERMINAL
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
  // "terminal.integrated.fontSize": 12,
  // "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "warp-terminal",
  "terminal.external.windowsExec": "C:\\Users\\Avill\\AppData\\Local\\Programs\\Warp\\warp.exe",

  // GIT
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "always",

  // EXPLORER & WORKBENCH
  "explorer.autoReveal": false,
  "window.zoomLevel": 0,
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "One Dark Pro Monokai Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.externalBrowser": " brave-browser",
  // "workbench.sideBar.location": "right",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.list.smoothScrolling": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.colorCustomizations": {
    "editorError.background": "#ff000033",
    "editorError.foreground": "#ff8585",
    "editorWarning.foreground": "#f8fa89",
    "list.activeSelectionBackground": "#fff2",
    "list.hoverBackground": "#fff3",
    "minimapSlider.activeBackground": "#f8fa8955",
    "minimapSlider.background": "#ffffff41",
    "minimapSlider.hoverBackground": "#ffffff51",
    "quickInputList.focusBackground": "#fff3",
    "scrollbarSlider.background": "#ffffff41",
    "tab.activeBorderTop": "#f8fa89"
  },

  // DIFF & SEARCH
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "search.showLineNumbers": true,

  // EMMET
  "emmet.syntaxProfiles": {
    "html": {
      "inline_break": true
    }
  },

  // SEGURIDAD
  "security.promptForLocalFileProtocolHandling": false,

  // OPTIMIZACIÓN PARA EXTENSIONES
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  
  // FORMATEADORES POR LENGUAJE
  "[javascript][javascriptreact][typescript][typescriptreact][json][jsonc][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[handlebars]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // EXTENSIONES Y CONFIGS ESPECÍFICAS
  "tailwind-fold.autoFold": false,
  "tailwind-fold.foldStyle": "QUOTES",
  "gitlens.codeLens.enabled": false,
  "prisma.showPrismaDataPlatformNotification": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "scm.experimental.showHistoryGraph": true,
  "Prettier-SQL.keywordCase": "upper",
  "Prettier-SQL.expressionWidth": 80,
  "Prettier-SQL.SQLFlavourOverride": "postgresql"

  // VIM
  // "vim.leader": "<Space>",
  // "vim.easymotion": true,
  // "vim.sneak": true,
  // "vim.sneakUseIgnorecaseAndSmartcase": true,
  // "vim.surround": true,
  // "vim.handleKeys": {
  //   "<C-f>": false,
  //   "<C-p>": false,
  //   "<C-w>": false,
  //   "<C-b>": false
  //   // "<C-d>": false
  // },

}

